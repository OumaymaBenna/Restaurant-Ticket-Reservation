<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_modern_background">

    <!-- AppBar avec design moderne -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glassmorphism_modern"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Gérer les Menus"
            app:titleTextColor="#F5F5F5"
            app:navigationIconTint="#FF6B35"
            android:background="@android:color/transparent" />
    </com.google.android.material.appbar.AppBarLayout>


    <!-- ProgressBar moderne -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#FF6B35"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- RecyclerView avec design moderne et amélioré -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMenus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls"
        android:fadeScrollbars="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Empty State moderne et attrayant -->
    <LinearLayout
        android:id="@+id/textViewEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:cardCornerRadius="110dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#25FFFFFF"
            app:strokeColor="#50FF6B35"
            app:strokeWidth="3dp"
            android:layout_marginBottom="28dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_restaurant"
                android:tint="#FF6B35"
                android:padding="50dp"
                android:scaleType="fitCenter" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucun menu disponible"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.02"
            android:layout_marginBottom="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commencez par créer votre premier menu"
            android:textSize="17sp"
            android:textColor="#E0E0E0"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCreateMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créer un menu"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FF6B35"
            app:cornerRadius="28dp"
            app:elevation="12dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="#FFFFFF"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />
    </LinearLayout>

    <!-- FAB Premium avec design exceptionnel - Positionné en bas -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Nouveau Menu"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#FF6B35"
        app:elevation="20dp"
        app:rippleColor="#E55A2B"
        app:cornerRadius="36dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:shadowColor="#80FF6B35"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
