<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_modern_background">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glassmorphism_modern"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Nouvelle Commande"
            app:titleTextColor="#FFFFFF"
            app:navigationIconTint="#FF6B35"
            android:background="@android:color/transparent" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card principale -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#30FFFFFF"
                app:strokeColor="#50FF6B35"
                app:strokeWidth="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/card_gradient_background">

                    <!-- Titre -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ CrÃ©er une commande"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SÃ©lectionnez le type de repas et ajoutez un commentaire"
                        android:textSize="14sp"
                        android:textColor="#B0B0B0"
                        android:gravity="center"
                        android:layout_marginBottom="32dp" />

                    <!-- Type de repas -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="Type de repas"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_restaurant"
                        app:startIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <Spinner
                            android:id="@+id/spinnerMealType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:textColor="#FFFFFF"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Commentaire -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="Commentaire"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_info"
                        app:startIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#B0B0B0"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:inputType="textMultiLine|textCapSentences"
                            android:minLines="4"
                            android:maxLines="8"
                            android:gravity="top|start"
                            android:hint="Ã‰crivez votre commentaire ici..."
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Bouton Soumettre -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CrÃ©er la commande"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="24dp"
                        app:backgroundTint="#FF6B35"
                        app:elevation="8dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:enabled="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#FF6B35" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

