<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_modern_background">

    <!-- ScrollView principal -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Header avec profil et notifications -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical">

                <!-- Photo de profil -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF6B35"
                    android:layout_marginEnd="12dp" />

                <!-- Nom et sous-titre -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom Utilisateur"
                        android:textColor="#F5F5F5"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choisissez votre repas"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- IcÃ´ne abonnement -->
                <ImageView
                    android:id="@+id/iconSubscription"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_star"
                    android:tint="#FF6B35"
                    android:background="@drawable/category_item_background"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Abonnement" />

                <!-- IcÃ´ne notifications -->
                <ImageView
                    android:id="@+id/iconNotifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="#FF6B35"
                    android:background="@drawable/category_item_background"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp" />

                <!-- Bouton dÃ©connexion -->
                <ImageView
                    android:id="@+id/iconLogout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_logout"
                    android:tint="#FF6B35"
                    android:background="@drawable/category_item_background"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="DÃ©connexion" />
            </LinearLayout>

            <!-- Barre de recherche -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_bar_background"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        android:tint="#E0E0E0"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rechercher un repas..."
                        android:textColor="#A0A0A0"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section CatÃ©gories (scrollable horizontal) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CatÃ©gories"
                        android:textColor="#F5F5F5"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voir tout"
                        android:textColor="#FF6B35"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- RecyclerView horizontal pour catÃ©gories -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_category" />
            </LinearLayout>

            <!-- Section Repas pour vous -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repas pour vous"
                    android:textColor="#F5F5F5"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Carte DÃ©jeuner -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#20FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Image du repas -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_lunch_illustration"
                                android:scaleType="centerCrop" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Informations du repas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DÃ©jeuner Complet"
                                android:textColor="#F5F5F5"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_clock"
                                    android:tint="#FF6B35"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15min"
                                    android:textColor="#E0E0E0"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_fire"
                                    android:tint="#FF6B35"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="500 cal"
                                    android:textColor="#E0E0E0"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_star"
                                    android:tint="#FFB800"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.9 (1k)"
                                    android:textColor="#E0E0E0"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="200 millimes"
                                    android:textColor="#FF6B35"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonAddLunch"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="+"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#F5F5F5"
                                    app:cornerRadius="20dp"
                                    app:backgroundTint="#FF6B35"
                                    app:elevation="4dp"
                                    app:rippleColor="#E55A2B"
                                    android:padding="0dp"
                                    app:iconPadding="0dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Carte DÃ®ner -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#20FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Image du repas -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_dinner_illustration"
                                android:scaleType="centerCrop" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Informations du repas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DÃ®ner Gastronomique"
                                android:textColor="#F5F5F5"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_clock"
                                    android:tint="#FF6B35"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20min"
                                    android:textColor="#E0E0E0"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_fire"
                                    android:tint="#FF6B35"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="650 cal"
                                    android:textColor="#E0E0E0"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_star"
                                    android:tint="#FFB800"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.8 (850)"
                                    android:textColor="#E0E0E0"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="200 millimes"
                                    android:textColor="#FF6B35"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonAddDinner"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="+"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#F5F5F5"
                                    app:cornerRadius="20dp"
                                    app:backgroundTint="#FF6B35"
                                    app:elevation="4dp"
                                    app:rippleColor="#E55A2B"
                                    android:padding="0dp"
                                    app:iconPadding="0dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Carte Repas Froid -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardColdMeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#20FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Image du repas -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            android:layout_marginEnd="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#1A4A8A93">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ¥—"
                                    android:textSize="50sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Informations du repas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Repas Froid"
                                android:textColor="#F5F5F5"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salades, sandwiches et plats froids"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="200 millimes"
                                    android:textColor="#FF6B35"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonReserveColdMeal"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="+"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#F5F5F5"
                                    app:cornerRadius="20dp"
                                    app:backgroundTint="#FF6B35"
                                    app:elevation="4dp"
                                    app:rippleColor="#E55A2B"
                                    android:padding="0dp"
                                    app:iconPadding="0dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Section Commande -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Passer une commande"
                    android:textColor="#F5F5F5"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Carte Commande -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCommande"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#20FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- IcÃ´ne -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#35FF6B35"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_restaurant"
                                android:tint="#FFFFFF"
                                android:padding="20dp"
                                android:scaleType="fitCenter" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Informations -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nouvelle Commande"
                                android:textColor="#F5F5F5"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SÃ©lectionnez le type de repas et ajoutez un commentaire"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:layout_marginBottom="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonCommande"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CrÃ©er une commande"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:cornerRadius="20dp"
                                app:backgroundTint="#FF6B35"
                                app:elevation="4dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Barre de navigation en bas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:paddingVertical="12dp"
        android:elevation="16dp">

        <!-- Accueil -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                android:tint="#FF6B35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textColor="#FF6B35"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Menu -->
        <LinearLayout
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_restaurant"
                android:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="#808080"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- RÃ©servations -->
        <LinearLayout
