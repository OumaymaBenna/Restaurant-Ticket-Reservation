<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_modern_background">

    <!-- AppBar moderne -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glassmorphism_modern"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Menu du jour"
            app:titleTextColor="#FFFFFF"
            app:navigationIconTint="#FF6B35"
            android:background="@android:color/transparent" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ProgressBar moderne -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#FF6B35"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- RecyclerView avec design amélioré -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Empty State moderne -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#25FFFFFF"
            app:strokeColor="#50FF6B35"
            app:strokeWidth="3dp"
            android:layout_marginBottom="28dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_restaurant"
                android:tint="#FF6B35"
                android:padding="50dp"
                android:scaleType="fitCenter" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucun menu disponible aujourd'hui"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.02"
            android:layout_marginBottom="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les menus seront disponibles prochainement"
            android:textSize="17sp"
            android:textColor="#E0E0E0"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
