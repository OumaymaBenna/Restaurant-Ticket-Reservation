<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
    app:cardBackgroundColor="#30FFFFFF"
        app:strokeColor="#70FF6B35"
        app:strokeWidth="2.5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        android:background="@drawable/premium_card_background">

        <!-- Header avec badge de statut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- IcÃ´ne Premium avec effet radial -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#00000000"
                app:strokeColor="#80FF6B35"
                app:strokeWidth="2.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/premium_icon_background">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_restaurant"
                        android:tint="#FFFFFF"
                        android:scaleType="fitCenter" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nom du menu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textViewMenuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu du jour"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.03"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3" />
            </LinearLayout>

            <!-- Badge Premium avec effet -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#404CAF50"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1.5dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponible"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.08"
                    android:shadowColor="#60000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Divider amÃ©liorÃ© -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginBottom="18dp" />

        <!-- DÃ©tails du menu avec icÃ´nes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#20FF6B35"
                    app:strokeColor="#40FF6B35"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="14dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_info"
                        android:tint="#FF6B35"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textViewAppetizer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EntrÃ©e: Salade"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:alpha="0.95" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#20FF6B35"
                    app:strokeColor="#40FF6B35"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="14dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_info"
                        android:tint="#FF6B35"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textViewMainCourse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Plat: Couscous"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:alpha="0.95" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#20FF6B35"
                    app:strokeColor="#40FF6B35"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="14dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_info"
                        android:tint="#FF6B35"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textViewDessert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dessert: Fruit"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:alpha="0.95" />
            </LinearLayout>

        </LinearLayout>

        <!-- Commentaire de l'administrateur -->
        <TextView
            android:id="@+id/textViewAdminComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#FFD700"
            android:textStyle="italic"
            android:padding="12dp"
            android:background="#20FFD700"
            android:layout_marginBottom="18dp"
            android:visibility="gone" />

        <!-- Section Commentaires des Ã©tudiants -->
        <LinearLayout
            android:id="@+id/sectionComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- En-tÃªte Commentaires -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ Commentaires des Ã©tudiants"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Liste des commentaires -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Message vide si pas de commentaires -->
            <TextView
                android:id="@+id/textViewNoComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aucun commentaire pour le moment."
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Divider amÃ©liorÃ© -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginBottom="18dp" />

        <!-- Boutons d'action (cachÃ©s, remplacÃ©s par menu contextuel) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier"
                android:textSize="14sp"
                android:textColor="#F5F5F5"
                app:backgroundTint="#FF6B35"
                app:cornerRadius="16dp"
                app:elevation="4dp"
                app:icon="@drawable/ic_edit"
                app:iconTint="#F5F5F5"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supprimer"
                android:textSize="14sp"
                android:textColor="#F5F5F5"
                app:backgroundTint="#F44336"
                app:cornerRadius="16dp"
                app:elevation="4dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="#F5F5F5"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
