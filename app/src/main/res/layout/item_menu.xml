<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#30FFFFFF"
    app:strokeColor="#50FF6B35"
    app:strokeWidth="2dp"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/card_gradient_background"
        android:clickable="false"
        android:focusable="false"
        android:descendantFocusability="afterDescendants">

        <!-- Header avec icône et nom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <!-- Icône du menu -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#35FF6B35"
                app:strokeColor="#60FF6B35"
                app:strokeWidth="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_restaurant"
                    android:tint="#FFFFFF"
                    android:padding="14dp"
                    android:scaleType="fitCenter" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Nom du menu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textViewMenuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu du jour"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="14sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginBottom="18dp" />

        <!-- Détails du menu avec icônes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_info"
                    android:tint="#FF6B35"
                    android:layout_marginEnd="14dp" />

                <TextView
                    android:id="@+id/textViewAppetizer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entrée: Salade"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_info"
                    android:tint="#FF6B35"
                    android:layout_marginEnd="14dp" />

                <TextView
                    android:id="@+id/textViewMainCourse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Plat: Couscous"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_info"
                    android:tint="#FF6B35"
                    android:layout_marginEnd="14dp" />

                <TextView
                    android:id="@+id/textViewDessert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dessert: Fruit"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Commentaire de l'administrateur -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#30FFD700"
            app:strokeColor="#60FFD700"
            app:strokeWidth="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:tint="#FFD700"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textViewComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="#FFD700"
                    android:textStyle="normal"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginBottom="18dp" />

        <!-- Section Commentaires -->
        <LinearLayout
            android:id="@+id/sectionComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:clickable="false"
            android:focusable="false"
            android:descendantFocusability="afterDescendants">

            <!-- Champ de saisie de commentaire pour l'étudiant -->
            <LinearLayout
                android:id="@+id/layoutAddComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Ajouter un commentaire"
                    app:hintTextColor="#FF6B35"
                    app:boxStrokeColor="#FF6B35"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="#1AE0E0E0"
                    app:startIconDrawable="@drawable/ic_info"
                    app:startIconTint="#FF6B35"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#B0B0B0"
                        android:textSize="15sp"
                        android:padding="12dp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:minLines="2"
                        android:maxLines="4"
                        android:gravity="top|start"
                        android:hint="Écrivez votre commentaire ici..."
                        android:background="@android:color/transparent"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPublishComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publier"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#FF6B35"
                    app:cornerRadius="16dp"
                    app:elevation="8dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:enabled="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:contentDescription="Publier le commentaire" />
            </LinearLayout>

            <!-- Liste des commentaires -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Message vide si pas de commentaires -->
            <TextView
                android:id="@+id/textViewNoComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aucun commentaire pour le moment. Soyez le premier à commenter !"
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginBottom="18dp" />

        <!-- Prix et bouton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prix"
                    android:textSize="12sp"
                    android:textColor="#B0B0B0"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.00 TND"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sélectionner"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="24dp"
                app:backgroundTint="#FF6B35"
                app:elevation="8dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconTint="#FFFFFF"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
