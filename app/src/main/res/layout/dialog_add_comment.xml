<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:fillViewport="true"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¬ Ajouter un commentaire"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
        
        <!-- Sous-titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partagez votre avis sur ce menu"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Champ de commentaire -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Votre commentaire"
            app:hintTextColor="#FF6B35"
            app:boxStrokeColor="#FF6B35"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#1AE0E0E0"
            app:startIconDrawable="@drawable/ic_info"
            app:startIconTint="#FF6B35"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0B0B0"
                android:textSize="16sp"
                android:padding="16dp"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="4"
                android:maxLines="8"
                android:gravity="top|start"
                android:hint="Ã‰crivez votre commentaire ici..."
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler"
                android:textColor="#E0E0E0"
                app:backgroundTint="#424242"
                app:cornerRadius="20dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publier"
                android:textColor="#F5F5F5"
                app:backgroundTint="#FF6B35"
                app:cornerRadius="20dp"
                app:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

