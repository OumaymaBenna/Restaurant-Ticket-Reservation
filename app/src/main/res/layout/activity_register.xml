<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_modern_background"
    tools:context=".ui.auth.RegisterActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glassmorphism_modern"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="CrÃ©er un compte"
            app:titleTextColor="#E0E0E0"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#FF6B35"
            android:background="@android:color/transparent" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="32dp">

            <!-- Logo/Icon -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoCard"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="12dp"
                app:strokeColor="#FF6B35"
                app:strokeWidth="3dp"
                android:background="@drawable/gradient_cyan_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ‘¤"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:textAlignment="center" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/registerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:strokeColor="#30E0E0E0"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Nom complet -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fullNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Nom complet"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#E0E0E0"
                            android:textSize="17sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Email"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#E0E0E0"
                            android:textSize="17sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- ID Ã‰tudiant (visible seulement pour les Ã©tudiants) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/studentIdLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Identifiant Ã©tudiant"
                        android:visibility="visible"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_info"
                        app:startIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextStudentId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#E0E0E0"
                            android:textSize="17sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Code Admin (visible seulement pour les administrateurs) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/adminCodeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Code Administrateur"
                        android:visibility="gone"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextAdminCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#E0E0E0"
                            android:textSize="17sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mot de passe -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Mot de passe"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="#FF6B35"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#E0E0E0"
                            android:textSize="17sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirmer mot de passe -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/confirmPasswordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:hint="Confirmer le mot de passe"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="#FF6B35"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#E0E0E0"
                            android:textSize="17sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- SÃ©lection du rÃ´le -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/roleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="RÃ´le"
                        app:hintTextColor="#FF6B35"
                        app:boxStrokeColor="#FF6B35"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#1AE0E0E0"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#FF6B35"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextRole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ã‰tudiant"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#E0E0E0"
                            android:textSize="17sp"
                            android:padding="16dp"
                            android:focusable="false"
                            android:clickable="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- RadioGroup pour sÃ©lectionner le rÃ´le -->
                    <RadioGroup
                        android:id="@+id/radioGroupRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/radioEtudiant"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ã‰tudiant"
                            android:textColor="#F5F5F5"
                            android:checked="true"
                            android:buttonTint="#FF6B35" />

                        <RadioButton
                            android:id="@+id/radioAdmin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Administrateur"
                            android:textColor="#F5F5F5"
                            android:buttonTint="#FF6B35" />
                    </RadioGroup>

                    <!-- Bouton Register -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRegister"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="CrÃ©er un compte"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#F5F5F5"
                        android:letterSpacing="0.05"
                        app:backgroundTint="#FF6B35"
                        app:cornerRadius="30dp"
                        app:elevation="8dp"
                        app:rippleColor="#E55A2B"
                        android:layout_marginBottom="20dp" />

                    <!-- Login Link -->
                    <TextView
                        android:id="@+id/textViewLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DÃ©jÃ  un compte ? Se connecter"
                        android:textColor="#FF6B35"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Ã‰lÃ©ments dÃ©coratifs -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/gradient_cyan_light"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
