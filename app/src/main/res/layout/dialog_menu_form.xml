<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nom du menu -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nom du menu"
            app:hintTextColor="#FF6B35"
            app:boxStrokeColor="#FF6B35"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#1AE0E0E0"
            app:startIconDrawable="@drawable/ic_restaurant"
            app:startIconTint="#FF6B35"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textColorHint="#757575"
                android:textSize="18sp"
                android:textCursorDrawable="@android:color/black"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Entrée -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Entrée"
            app:hintTextColor="#FF6B35"
            app:boxStrokeColor="#FF6B35"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#1AE0E0E0"
            app:startIconDrawable="@drawable/ic_restaurant"
            app:startIconTint="#FF6B35"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextAppetizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textColorHint="#757575"
                android:textSize="18sp"
                android:textCursorDrawable="@android:color/black"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Plat principal -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Plat principal"
            app:hintTextColor="#FF6B35"
            app:boxStrokeColor="#FF6B35"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#1AE0E0E0"
            app:startIconDrawable="@drawable/ic_restaurant"
            app:startIconTint="#FF6B35"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextMainCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textColorHint="#757575"
                android:textSize="18sp"
                android:textCursorDrawable="@android:color/black"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dessert -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Dessert"
            app:hintTextColor="#FF6B35"
            app:boxStrokeColor="#FF6B35"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#1AE0E0E0"
            app:startIconDrawable="@drawable/ic_restaurant"
            app:startIconTint="#FF6B35"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDessert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textColorHint="#757575"
                android:textSize="18sp"
                android:textCursorDrawable="@android:color/black"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Commentaire de l'administrateur -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Commentaire (optionnel)"
            app:hintTextColor="#FF6B35"
            app:boxStrokeColor="#FF6B35"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#1AE0E0E0"
            app:startIconDrawable="@drawable/ic_info"
            app:startIconTint="#FF6B35"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textColorHint="#757575"
                android:textSize="18sp"
                android:textCursorDrawable="@android:color/black"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="5"
                android:gravity="top|start" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler"
                android:textColor="#E0E0E0"
                app:backgroundTint="#424242"
                app:cornerRadius="20dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enregistrer"
                android:textColor="#F5F5F5"
                app:backgroundTint="#FF6B35"
                app:cornerRadius="20dp"
                app:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

