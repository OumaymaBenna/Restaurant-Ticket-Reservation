<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="#1A1A1A"
    app:strokeColor="#FF6B35"
    app:strokeWidth="2dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header moderne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#2A1A0F"
                    app:strokeColor="#FF6B35"
                    app:strokeWidth="2dp"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notifications"
                            android:tint="#FF6B35"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textViewDialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:letterSpacing="0.01" />
            </LinearLayout>

            <ImageView
                android:id="@+id/buttonCloseDialog"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FF6B35"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- RecyclerView pour les notifications -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNotificationsDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Bouton pour voir toutes les notifications -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir toutes les notifications"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="#FF6B35"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            android:layout_marginTop="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            style="@style/Widget.Material3.Button" />

        <!-- Texte vide si aucune notification -->
        <LinearLayout
            android:id="@+id/emptyStateDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_notifications"
                android:tint="#FF6B35"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aucune notification"
                android:textColor="#B0B0B0"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

