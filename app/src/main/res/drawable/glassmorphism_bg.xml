<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Couche 1 : fond flou transparent -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40E0E0E0"/> <!-- gris clair 25% -->
        </shape>
    </item>

    <!-- Couche 2 : contour blanc -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#80E0E0E0" /> <!-- gris clair 50% -->

            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Couche 3 : dégradé léger -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:startColor="#30E0E0E0"
                android:endColor="#10E0E0E0"
                android:angle="90" />

        </shape>
    </item>

</layer-list>
